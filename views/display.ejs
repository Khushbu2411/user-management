<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Display all users</title> 
        <link rel="stylesheet" href='/style.css'>

    </head>
    
    <body>
        <%- include('./partials/nav.ejs') %>

        <div>
            <h2>All Users</h2>
            <hr>
            <% if(data!=null) { %>
                <table>
                    <tr>
                        <th>S.No. </th>
                        <th>First Name </th>
                        <th>Last Name </th> 
                        <th>Email </th>
                        <th>Mobile </th>
                        <th>Age</th>
                        <th>Active</th>
                        <th>Address</th>
                        <th>Likes </th>
                    </tr>
                    <% for(let i=0; i<data.length; i++){ %>
                        <tr>
                            <td><%= data[i].id %></td>
                            <td><%= data[i].firstname %></td>
                            <td><%= data[i].lastname %></td>
                            <td><%= data[i].email %></td>
                            <td><%= data[i].mobile %></td>
                            <td><%= data[i].age %></td>
                            <td><%= data[i].active %></td>
                            <td><%= data[i].address %></td>
                            <td><%= data[i].likes %></td>
                        </tr>
                    <% } %>
                </table>
            <% }else{ %>
                <h4>There is no data to display</h4>
                <% } %>
        </div>
   

        <br><br><br><br>
        <%- include('./partials/footer.ejs') %>

    </body>
</html>

